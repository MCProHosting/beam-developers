doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

        link(rel='stylesheet', href='/css/style.css')
        title= title


    body
        nav.navbar.navbar-default
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#js-navbar')
                        span.icon.icon-bars
                a.navbar-brand Beam Developers

                #js-navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li.active: a(href='/') Home
                        li: a(href='/intro') Getting Started
                        li: a(href='/api') API Reference

                        if user
                            li: a(href='/user/logout')
                        else
                            li: a(href='/user/login')

        .content
            block content

        footer.site-footer
            .container
                .pull-left
                    Copyright &copy; 2015 #[a(href='https://mcprohosting.com') MCProHosting]

                .pull-right
                    ul.footer-list
                        li: a(href='#{beamUrl}/legal/tos') Terms of Service
                        li: a(href='#{beamUrl}/legal/privacy') Privacy Policy
                        li: a(href='#{beamUrl}/contact') Contact
                        li: a(href='#{beamUrl}') Beam

        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="/js/prism.js")
        script(src="/js/developers.js")
